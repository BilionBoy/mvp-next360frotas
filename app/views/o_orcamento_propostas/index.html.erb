<%= render "shared/context_nav", title: t("activerecord.models.#{OOrcamentoProposta.model_name.i18n_key}.other"), new_path: new_o_orcamento_proposta_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{OOrcamentoProposta.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :o_orcamento_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), o_orcamento_propostas_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :o_orcamento, t("activerecord.attributes.o_orcamento_proposta.orcamento")) %></th>
            <th><%= sort_link(@q, :o_proposta, t("activerecord.attributes.o_orcamento_proposta.proposta")) %></th>
            <th><%= sort_link(@q, :o_status_aprovacao, t("activerecord.attributes.o_orcamento_proposta.status_aprovacao")) %></th>
            <th><%= sort_link(@q, :aprovado_por, t("activerecord.attributes.o_orcamento_proposta.aprovado_por")) %></th>
            <th><%= sort_link(@q, :aprovado_em, t("activerecord.attributes.o_orcamento_proposta.aprovado_em")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_orcamento_propostas.each do |o_orcamento_proposta| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_orcamento_proposta_path(o_orcamento_proposta), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for o_orcamento_proposta, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= o_orcamento_proposta_path(o_orcamento_proposta) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= o_orcamento_proposta.o_orcamento %></td>
                    <td><%= o_orcamento_proposta.o_proposta %></td>
                    <td><%= o_orcamento_proposta.o_status_aprovacao %></td>
                    <td><%= o_orcamento_proposta.aprovado_por %></td>
                    <td><%= o_orcamento_proposta.aprovado_em %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
