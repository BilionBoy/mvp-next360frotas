<%= render "shared/context_nav", title: t("activerecord.models.#{OOrcamentoProposta.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{OOrcamentoProposta.model_name.i18n_key}.other"), o_orcamento_propostas_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@o_orcamento_proposta) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @o_orcamento_proposta.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{OOrcamentoProposta.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-12">
          <%= f.association :o_orcamento, input_html: { class: "capitalize"}, placeholder: "O orcamento"  %>
        </div>
        <div class="col-12">
          <%= f.association :o_proposta, input_html: { class: "capitalize"}, placeholder: "O proposta"  %>
        </div>
        <div class="col-12">
          <%= f.input :o_status_aprovacao_id, collection: OStatusAprovacao.all, label_method: :descricao, value_method: :id, prompt: "Status da Solicitação de Proposta" %>
        </div>
        <div class="col-12">
          <%= f.input :aprovado_por, input_html: { class: "capitalize"}, placeholder: "Aprovado por"  %>
        </div>
        <div class="col-12">
          <%= f.input :aprovado_em, input_html: { class: "capitalize"}, placeholder: "Aprovado em"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", o_orcamento_propostas_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>