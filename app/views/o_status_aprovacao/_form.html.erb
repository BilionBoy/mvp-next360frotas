<%= render "shared/context_nav", title: t("activerecord.models.#{OStatusAprovacao.model_name.i18n_key}.other") do  %>
  <%= link_to t("activerecord.models.#{OStatusAprovacao.model_name.i18n_key}.other"), o_status_aprovacao_index_path, class: "text-dark" %>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@o_status_aprovacao) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @o_status_aprovacao.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{OStatusAprovacao.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-4">
          <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", o_status_aprovacao_index_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>